<div class="row justify-content-center">
  <div class="col-m-7 text-center mx-4">
    <h1>Sign Up </h1>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-7 text-center mt-4">
    <%= form_for @user do |f| %>
      <%= f.label :name, 'Name' %><br>
      <%= f.text_field :name, placeholder: 'user name' %><br>
      <% if @user.errors[:name].any? %>
        <% @user.errors[:name].each do |msg| %>
          <%= msg %><br>
        <% end %>
      <% end %>

      <%= f.label :userid, 'User ID' %><br>
      <%= f.text_field :userid, placeholder: 'user name' %><br>
      <% if @user.errors[:userid].any? %>
        <% @user.errors[:userid].each do |msg| %>
          <%= msg %><br>
        <% end %>
      <% end %>

      <%= f.label :email, 'Email' %><br>
      <%= f.email_field :email, placeholder: 'Example@email.com'%><br>
      <% if @user.errors[:email].any? %>
        <% @user.errors[:email].each do |msg| %>
          <%= msg %><br>
        <% end %>
      <% end %>

      <%= f.submit value: 'Submit' %>
    <% end %>
  </div>
</div>